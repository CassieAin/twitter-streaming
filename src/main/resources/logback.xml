<configuration>
    <appender
            name="console"
            class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}] %-5level %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="utils" level="debug"/>
    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>